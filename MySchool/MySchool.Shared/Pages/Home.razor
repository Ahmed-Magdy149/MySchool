@page "/"
@using MySchool.Shared.Services
@using MySchool.Shared.Models
@inject IFormFactor FormFactor
@inject NavigationManager NavigationManager

<PageTitle>MySchool - Educational Platform</PageTitle>

<div class="container">
    <h1 class="text-center mb-4">MySchool Educational Platform</h1>
    
    <div class="row">
        @foreach (var subject in subjects)
        {
            <div class="col-md-4 mb-4">
                <div class="card subject-card">
                    <div class="card-body text-center">
                        <h3 class="card-title">@subject.Name</h3>
                        <p class="card-text">@subject.Description</p>
                        <button class="btn btn-primary" @onclick="() => SelectSubject(subject)">
                            اختر المادة
                        </button>
                    </div>
                </div>
            </div> 
        }
    </div>
</div>

<style>
    .subject-card {
        transition: transform 0.3s;
        height: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .subject-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
    
    .btn-primary {
        background-color: #4a6baf;
        border-color: #4a6baf;
    }
</style>

